{
  "extends": ["react-app"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
